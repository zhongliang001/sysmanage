{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:all",
        "plugin:vue/essential",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "double"],
        "max-len": 0,
        "vue/multi-word-component-names": "off",
        "sort-keys": "off",
        "no-underscore-dangle": "off",
        "consistent-this": "off",
        "no-alert": "off",
        "max-lines-per-function": "off",
        "max-statements": "off",
        "max-lines": "off",
        "sort-imports": "off",
        "func-style": 0,
        "require-unicode-regexp": "off",
        "prefer-named-capture-group": "off"
    }
}
